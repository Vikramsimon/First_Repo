--Step-1 Create Database --
  Create Database P10;

--Step-2 To Enter in the Database-- 
use P10;

--Step-3 Create the table--  
Create Table EMP 
(Emp_Id Char(5), 
Name Varchar (20), 
Birth_Date Date, 
Salary int);

--Step-4 Insert Data in the table-- 
Insert into EMP (Emp_Id, Name, Salary)
value ('E0001', 'Vikram', 15000);

-- Step-5 To delete the table 
Drop table EMP;

--Recreating the Table--
CREATE TABLE EMP (
    Emp_Id CHAR(5),
    Name VARCHAR(20),
    Birth_Date DATE,
    Salary INTEGER
);

INSERT INTO EMP (Emp_Id, Name, Birth_Date, Salary)
VALUES ('E0001', 'Vikram', '1981-07-11', 15000.00);

Select * from EMP;

--Creating the Related Table
CREATE TABLE EmployeeDetails (
    Emp_Id VARCHAR(10) PRIMARY KEY,
    Address VARCHAR(255),
    Date_of_Joining DATE,
    Marital_Status VARCHAR(10),
    Department VARCHAR(50),
    Designation VARCHAR(50)
);

Drop TABLE EmployeeDetails;

