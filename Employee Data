	Select Top 10 * from EMP where Salary > 50000;

	Select Top 10 * from EMP Order by Salary Desc;
	Alter Table EMP add Department Varchar (10);

	Update EMP Set Department = 'IT' where Salary >50000 ;

		Select * from EMP Order by Salary Desc;

		Update EMP Set Department = 'HR' 
		where Salary > 40000 and Department is null;

		Update EMP Set Department = 'MIS' 
		where Salary < 49000 and Department = 'HR';
		
		Update EMP Set Department = 'Ops' 
		where Department is null;

Alter Table EMP add Designation Varchar (10);

Update EMP Set Designation = 'Manager' 
		where Salary >=52000;

Select * from EMP Order by Salary Desc;
Update EMP Set Designation = 'Manager' 
		where Salary =50000 and Department = 'HR';

